(in-package :cl-sdl2-hershey)

;; given a start and end number create a list with all numbers in the interval
;; e.g. (range 1 5) => (1 2 3 4 5)
(defun range (start end)
  (loop for i from start to end collect i))

;; flatten a list which contains lists
;; e.g. (flatten '((1 2) 0 (3 4))) => (1 2 0 3 4)
(defun flatten (list)
  (loop for i in list append (if (listp i) i (list i))))


